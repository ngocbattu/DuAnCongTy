<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="120dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/cuttom_recy_home"
        android:layout_marginLeft="6dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="03"
        android:textColor="#82A0FA"
        android:textSize="28dp"
        android:id="@+id/txt_so_ngay"
         />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/txt_so_ngay"
            android:textSize="10sp"
            android:textColor="#C8C8C8"
            app:layout_constraintTop_toTopOf="parent"
            android:text="TUE"
            android:textStyle="bold"
            android:id="@+id/txt_ten_ngay"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/txt_so_ngay"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"
            android:text="A slow but sure
            start."
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:id="@+id/txt_trang_thai"
             />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>